@import "/pages/components/base/base.wxss";

.container {
  background-color: #f2f2f2;
  min-height: 100%;
}

.swiper {
  height: 400rpx;
}

.swiper-item {
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 400rpx;
}

.fun-list {
  background-color: #fff;
}

.fun-item {
  padding: 29rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #d9d9d9;
}

.fun-banner {
  width: 100%;
  height: 200rpx;
  vertical-align: top;
}

.fun-img {
  width: 36rpx;
  height: 36rpx;
  vertical-align: bottom;
}

.fun-info {
  width: calc(100% - 50rpx);
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #1e1e1e;
}

.fun-arrow {
  width: 12rpx;
  height: 22rpx;
}

.fun-title {
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
  text-align: center;
  font-size: 32rpx;
  color: #1e1e1e;
  font-weight: bold;
}

.fun2-list {
  position: relative;
  padding: 20rpx 10rpx 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.fun2-item {
  width: 230rpx;
  margin: 0 0 30rpx 10rpx;
  text-align: center;
}

.fun2-img {
  width: 230rpx;
  height: 230rpx;
  vertical-align: bottom;
}

.fun2-des {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #1e1e1e;
}
