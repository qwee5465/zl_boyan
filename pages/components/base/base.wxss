/* 页面加载过渡层 */

.loading-warp {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  z-index: 10000;
  transition: opacity 0.3s linear;
}

.loading-warp.loading-opacity0 {
  opacity: 0;
}

/* toast提示框 */

.toast-warp {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99999;
}

.toast-tip {
  padding: 30rpx 40rpx;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #fff;
}

.toast-icon {
  margin: 0 auto 20rpx;
  display: block;
  width: 46rpx;
  height: 46rpx;
}

/* 底部技术支持 */

.container.zuanla-container {
  min-height: calc(100% - 80rpx) !important;
}

.footer-zuanla {
  position: relative;
  font-size: 20rpx;
  color: #afafaf;
  text-align: center;
  background-color: #f2f2f2;
  padding-top: 15rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}

.footer-zuanla .footer-gray {
  color: #999;
}

/* 底部tabBar */

.bar-h100 {
  height: 96rpx;
}

.bar-warp {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  border-top: 0.5px solid #c8c8c8;
  background-color: #fff;
  z-index: 10001;
}

.bar-item {
  position: relative;
  flex: 1;
  text-align: center;
}

.bar-item-icon {
  width: 60rpx;
  height: 60rpx;
  vertical-align: bottom;
  margin: auto;
}

.bar-text {
  font-size: 22rpx;
  color: #9c9c9c;
  text-align: center;
}

.bar-item.active .bar-text {
  color: #373737;
  font-weight: 600;
}

.bar-reddot {
  position: absolute;
  top: 0;
  right: -5px;
  font-size: 16rpx;
  min-width: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  padding: 0 3px;
  box-sizing: border-box;
  color: #fff;
  background-color: red;
  text-align: center;
  border-radius: 24rpx;
}

/** 公告 */

.notice-view {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0rpx;
  top: 0rpx;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 9999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.notice {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 200rpx;
  max-height: 600rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  background-color: rgba(61, 61, 61, 0.9);
  padding: 50rpx 40rpx;
  border-radius: 8rpx;
}

.notice-title {
  font-size: 16px;
  color: #fed700;
}

.notice-content {
  min-height: 100rpx;
  max-height: 500rpx;
  margin-top: 20rpx;
}

.notice-content-text {
  font-size: 14px;
  color: #fff;
}

.base-notice-line {
  width: 2rpx;
  height: 50rpx;
  background-color: rgba(61, 61, 61, 0.9);
}

.notice-cancel {
  width: 70rpx;
  height: 70rpx;
}

/* 上拉加载底部样式 */

.b-loading-warp {
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #aeaeae;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.b-loading-icon {
  width: 18px;
  height: 18px;
  margin-right: 10rpx;
}

/* 解决ios 上下拉出行白条问题 */

.scroll-overstep-warp {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background-color: #ffce00;
}
