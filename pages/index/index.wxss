@import "/pages/components/base/base.wxss";

.container {
  background-color: #f2f2f2;
  min-height: 100%;
}

.swiper {
  height: 400rpx;
}

.swiper-item {
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 400rpx;
}

.fun-list {
  background-color: #fff;
}

.fun-item {
  padding: 29rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #d9d9d9;
}

.fun-img {
  width: 36rpx;
  height: 36rpx;
  vertical-align: bottom;
}

.fun-info {
  width: calc(100% - 50rpx);
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #1e1e1e;
}

.fun-arrow {
  width: 12rpx;
  height: 22rpx;
}

.fun1-list {
  background-color: #fff;
  padding: 40rpx 27rpx;
  box-sizing: border-box;
  display: flex;
}

.fun1-item {
  flex: 1;
  margin: 0 27rpx;
  text-align: center;
}

.fun1-img {
  width: 120rpx;
  height: 120rpx;
  vertical-align: bottom;
}

.fun1-des {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #676767;
  font-weight: bold;
}

.fun-title {
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
  text-align: center;
  font-size: 32rpx;
  color: #1e1e1e;
  font-weight: bold;
}

.fun2-list {
  position: relative;
  padding: 20rpx 10rpx 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.fun2-item {
  width: 230rpx;
  margin: 0 0 30rpx 10rpx;
  text-align: center;
}

.fun2-img {
  width: 230rpx;
  height: 230rpx;
  vertical-align: bottom;
}

.fun2-des {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #1e1e1e;
}

.fun3-warp {
  position: relative;
}

.fun3-banner {
  width: 100%;
  height: 200rpx;
}

.fun3-list {
  background-color: #fff;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.fun3-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.fun3-left {
  width: 308rpx;
  height: 130rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #1e1e1e;
  background-color: #f4f4f4;
}

.fun3-img {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 23rpx auto 0;
}

.fun3-des {
  display: block;
  width: calc(100% - 308rpx);
  padding-left: 90rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #676767;
  line-height: 40rpx;
}

.fun3-des.fsr20 {
  font-size: 20rpx;
  line-height: 32rpx;
}

.fun4-warp {
  position: relative;
}

.fun4-banner {
  width: 100%;
  height: 200rpx;
  vertical-align: bottom;
}

.fun4-box {
  position: relative;
  width: 100%;
  height: 435rpx;
  background-color: #fff;
}

.fun4-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 240rpx;
  z-index: 1;
}

.fun4-con {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 435rpx;
  z-index: 2;
  padding: 10rpx 30rpx 0;
  box-sizing: border-box;
}

.fun4-des {
  height: 240rpx;
  font-size: 24rpx;
  color: #676767;
  letter-spacing: 0;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
}

.fun4-more {
  text-align: right;
  height: 60rpx;
}

.fun4-btn {
  float: right;
  width: 165rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #ffa827;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #fff;
}

.fun5-warp {
  padding: 0rpx 0 10rpx;
}

.fun5-list {
  background-color: #fff;
}

.fun5-item {
  display: flex;
  align-items: center;
  padding: 26rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #d9d9d9;
}

.fun5-info {
  width: calc(100% - 12rpx);
  font-size: 30rpx;
  color: #1e1e1e;
}

.fun5-arrow {
  width: 12rpx;
  height: 22rpx;
}

.fun5-banner, .fun-banner {
  width: 100%;
  height: 200rpx;
  vertical-align: top;
}
