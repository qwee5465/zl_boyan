@import "/pages/components/base/base.wxss";

.container {
  background-color: #f2f2f2;
  min-height: 100%;
}

.swiper {
  height: 400rpx;
}

.swiper-item {
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 400rpx;
}

.fun-list {
  background-color: #fff;
}

.fun-item {
  padding: 29rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #d9d9d9;
}

.fun-img {
  width: 36rpx;
  height: 36rpx;
  vertical-align: bottom;
}

.fun-info {
  width: calc(100% - 50rpx);
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #1e1e1e;
}

.fun-arrow {
  width: 12rpx;
  height: 22rpx;
}

.map-warp {
  width: 100%;
  height: 636rpx;
}
